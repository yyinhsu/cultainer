rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isValidEntry() {
      let data = request.resource.data;
      return data.keys().hasAll(['type', 'title', 'creator', 'status', 'createdAt', 'updatedAt'])
        && data.type in ['book', 'movie', 'tv', 'music', 'other']
        && data.status in ['wishlist', 'in-progress', 'completed', 'dropped', 'recall']
        && data.title is string
        && data.title.size() > 0
        && data.title.size() <= 500;
    }
    
    function isValidTag() {
      let data = request.resource.data;
      return data.keys().hasAll(['name', 'color', 'createdAt'])
        && data.name is string
        && data.name.size() > 0
        && data.name.size() <= 50
        && data.color is string;
    }

    // User profiles
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isOwner(userId);
      
      // Entries subcollection
      match /entries/{entryId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidEntry();
        allow update: if isOwner(userId) && isValidEntry();
        allow delete: if isOwner(userId);
      }
      
      // Tags subcollection
      match /tags/{tagId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidTag();
        allow update: if isOwner(userId) && isValidTag();
        allow delete: if isOwner(userId);
      }
      
      // Excerpts subcollection (for future use)
      match /excerpts/{excerptId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
