{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Get Packages",
      "type": "shell",
      "command": "flutter pub get",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build Runner",
      "type": "shell",
      "command": "dart run build_runner build --delete-conflicting-outputs",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build Runner (Watch)",
      "type": "shell",
      "command": "dart run build_runner watch --delete-conflicting-outputs",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Flutter: Run Tests",
      "type": "shell",
      "command": "flutter test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Run Tests with Coverage",
      "type": "shell",
      "command": "flutter test --coverage",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Analyze",
      "type": "shell",
      "command": "flutter analyze",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Format",
      "type": "shell",
      "command": "dart format lib test",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter clean && flutter pub get",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build iOS (Release)",
      "type": "shell",
      "command": "flutter build ios --release",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter: Build Web",
      "type": "shell",
      "command": "flutter build web",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Pre-commit Check",
      "type": "shell",
      "command": "dart format --set-exit-if-changed lib test && flutter analyze && flutter test",
      "group": "build",
      "problemMatcher": []
    }
  ]
}